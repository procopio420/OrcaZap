# ============================================================================
# OrcaZap Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# ----------------------------------------------------------------------------
# Database
# ----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# For production with PgBouncer: postgresql://user:password@127.0.0.1:6432/database
DATABASE_URL=postgresql://orcazap:password@localhost:5432/orcazap

# ----------------------------------------------------------------------------
# Redis
# ----------------------------------------------------------------------------
# Redis connection string for queue and sessions
# Format: redis://:password@host:port/db
# For password-protected Redis: redis://:password@host:6379/0
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# Application
# ----------------------------------------------------------------------------
# Secret key for application (generate with: openssl rand -hex 32)
# Used for session signing, CSRF tokens, etc.
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# Debug mode (true/false)
# Enable detailed error pages and debug logging (never use in production)
DEBUG=false

# Environment name (development, staging, production)
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# WhatsApp Cloud API
# ----------------------------------------------------------------------------
# Webhook verification token (set in Meta Business Platform)
# Generate a random string: openssl rand -hex 16
WHATSAPP_VERIFY_TOKEN=change-me-random-string

# WhatsApp Cloud API access token (from Meta for Developers)
# Get from: https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=your-access-token-here

# WhatsApp phone number ID (from Meta Business Platform)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# WhatsApp Business Account ID (WABA ID)
WHATSAPP_BUSINESS_ACCOUNT_ID=your-waba-id

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
# Bcrypt password hashing rounds (default: 12)
# Higher = more secure but slower (12 is recommended)
BCRYPT_ROUNDS=12

# Admin session secret (optional, defaults to SECRET_KEY)
# Generate with: openssl rand -hex 32
ADMIN_SESSION_SECRET=change-me-in-production

# ----------------------------------------------------------------------------
# LLM Providers (Optional)
# ----------------------------------------------------------------------------
# OpenAI API key (for LLM-powered message parsing)
# Optional: Only needed if using AI parsing
OPENAI_API_KEY=

# Anthropic API key (for LLM-powered message parsing)
# Optional: Only needed if using AI parsing
ANTHROPIC_API_KEY=

# Primary LLM provider (openai or anthropic)
LLM_PRIMARY_PROVIDER=openai

# Fallback LLM provider (openai or anthropic)
LLM_FALLBACK_PROVIDER=anthropic

# ----------------------------------------------------------------------------
# Timeouts (Optional)
# ----------------------------------------------------------------------------
# HTTP client timeout in seconds (default: 10.0)
HTTP_TIMEOUT=10.0

# WhatsApp API timeout in seconds (default: 30.0)
WHATSAPP_API_TIMEOUT=30.0

# LLM API timeout in seconds (default: 60.0)
LLM_API_TIMEOUT=60.0

# Worker job timeout in seconds (default: 300 = 5 minutes)
WORKER_JOB_TIMEOUT=300

# ----------------------------------------------------------------------------
# Operator Admin (Optional)
# ----------------------------------------------------------------------------
# Operator username for system-wide admin access
# Set in environment or create via operator admin panel
OPERATOR_USERNAME=admin

# Operator password (bcrypt hash)
# Generate hash with: python -c "import bcrypt; print(bcrypt.hashpw(b'password', bcrypt.gensalt(12)).decode())"
OPERATOR_PASSWORD=

# ----------------------------------------------------------------------------
# Stripe (Optional)
# ----------------------------------------------------------------------------
# Stripe secret key for subscription management
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=

# Stripe webhook secret (for webhook signature verification)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=

