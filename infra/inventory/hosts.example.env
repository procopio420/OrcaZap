# OrcaZap Infrastructure Inventory
# Copy this file to hosts.env and fill in your actual values
# NEVER commit hosts.env to git - it contains sensitive information

# VPS1 (APP Server)
VPS1_HOST=vps1.example.com
VPS1_SSH_USER=root
VPS1_SSH_PORT=22
VPS1_WIREGUARD_IP=10.10.0.1
VPS1_WIREGUARD_PRIVATE_KEY=REPLACE_WITH_VPS1_PRIVATE_KEY
VPS1_WIREGUARD_PUBLIC_KEY=REPLACE_WITH_VPS1_PUBLIC_KEY
VPS1_PUBLIC_IP=REPLACE_WITH_VPS1_PUBLIC_IP

# VPS2 (DATA Server)
VPS2_HOST=vps2.example.com
VPS2_SSH_USER=root
VPS2_SSH_PORT=22
VPS2_WIREGUARD_IP=10.10.0.2
VPS2_WIREGUARD_PRIVATE_KEY=REPLACE_WITH_VPS2_PRIVATE_KEY
VPS2_WIREGUARD_PUBLIC_KEY=REPLACE_WITH_VPS2_PUBLIC_KEY
VPS2_PUBLIC_IP=REPLACE_WITH_VPS2_PUBLIC_IP

# VPS3 (WORKER Server)
VPS3_HOST=vps3.example.com
VPS3_SSH_USER=root
VPS3_SSH_PORT=22
VPS3_WIREGUARD_IP=10.10.0.3
VPS3_WIREGUARD_PRIVATE_KEY=REPLACE_WITH_VPS3_PRIVATE_KEY
VPS3_WIREGUARD_PUBLIC_KEY=REPLACE_WITH_VPS3_PUBLIC_KEY
VPS3_PUBLIC_IP=REPLACE_WITH_VPS3_PUBLIC_IP

# Database Configuration
POSTGRES_DB=orcazap
POSTGRES_USER=orcazap
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis Configuration
REDIS_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Application Configuration
APP_USER=orcazap
APP_DIR=/opt/orcazap
APP_ENV_FILE=/opt/orcazap/.env

# Domain (for Nginx)
DOMAIN=orcazap.example.com

# WireGuard Configuration
WIREGUARD_NETWORK=10.10.0.0/24
WIREGUARD_PORT=51820

# Backup Configuration
BACKUP_DIR=/backup
BACKUP_RETENTION_DAYS=7


